---- Display titles of all songs by the artist name 'Queen' ----

SELECT title 
FROM songs 
WHERE artist = "Queen";


---- Display name of all artists from the 'Pop' genre ----

SELECT name
FROM artists
WHERE genre = 'Pop';


---- Display titles of all songs from 'Pop' artists (from previous query) ----

SELECT title 
FROM songs 
WHERE artist IN 
    (SELECT name
    FROM artists
    WHERE genre = "Pop");

